<h2>スケジュール新規作成</h2>

<%= render "shared/error", obj:@post %>
  <%= form_with model: @post do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title, class: "forms" %></td>
    </tr>

    <tr>
      <th><%= f.label :start_at ,"開始日" %></th>
      <td><%= f.date_field :start_at, class: "forms" %></td>
    </tr>

    <tr>
      <th><%= f.label :end_at ,"終了日" %></th>
      <td><%= f.date_field :end_at, class: "forms" %></td>
    </tr>

    <tr>
      <th><%= f.label :is_all_day ,"終日" %></th>
      <td><%= f.check_box :is_all_day, {}, checked_value='true', unchecked_value='false' %>
      <br>終日の場合はチェックを入れます。
      </td>
    </tr>

    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo, class: "memo-cotent" %></td>
    </tr>
  </table>


     <div>
       <ul>
         <li><%= f.submit "登録完了する", class: "submit-button" %></li>
         <li><%= link_to "ユーザー情報一覧に戻る", :posts %></li>
       </ul>
     </div>
   <% end %>
